<h1>New review</h1>

<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>

  <%= f.hidden_field :product_id, :value => @product.id %>
  <%= f.label :author %>
  <%= f.text_field :author, placeholder: @user.email %>
  <br>
  <%= f.label :rating %>
  <%= f.number_field :rating, {min: 1, max: 5} %>
  <br>
  <%= f.label :content_body %>
  <br>
  <%= f.text_area :content_body, placeholder: "min 50 characters, max 250 characters" %>
  <br>
  <%= f.submit  %>
<% end %>
