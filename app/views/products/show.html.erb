<h1><%= @product.name %></h1>
<h2>Price: $<%= @product.cost %></h2>
<h2>Made in <%= @product.country_of_origin %></h2>

<ul>
  <% @reviews.each do |review| %>
  <li>Review by <%=link_to review.author, product_review_path(@product, review) %></li>
  <% end %>
</ul>

<p><%= link_to "Add Review", new_product_review_path(@product) %></p>
<% if @user.admin %>
  <p><%= link_to "Edit", edit_product_path(@product) %></p>
  <p><%= link_to "Delete", product_path(@product),
                          :data => {:confirm => "You sure?",
                                    :method => "delete"} %></p>
<% end %>
