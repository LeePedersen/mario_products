<!DOCTYPE html>
<html>
  <head>
    <title>MarioProducts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- bootstrap nav bar? -->
    <div class="navbar">
      <a href="/">Home</a>
      <% if current_user %>
        <p><img src="https://img.icons8.com/pastel-glyph/64/000000/person-male.png">
        <%= current_user.email %> |
        <%= link_to "Sign out", '/signout' %></p>
        <p><% if current_user.admin %>
            Admin Tools:
            <%= link_to "User list", '/users' %> |
            <%= link_to "Add product", '/products/new' %>
          <% end %></p>
        <% else %>
          <p><%= link_to "Sign up", '/users/new' %> |
          <%= link_to "Sign in", '/signin' %></p>
      <% end %>

    </div>

    <div class="content container">

      <%= flash[:alert] %>
      <%= flash[:notice] %>

      <%= yield %>
    </div>

  </body>
</html>
