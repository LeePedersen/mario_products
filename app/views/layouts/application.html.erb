<!DOCTYPE html>
<html>
  <head>
    <title>MarioProducts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <a href="/">Home</a> |
    <% if current_user %>
      <%= current_user.email %> |
      <%= link_to "Sign out", '/signout' %>
    <% else %>
      <%= link_to "Sign up", '/users/new' %> |
      <%= link_to "Sign in", '/signin' %>
    <% end %>
    
    <div class="admin">
      <% if current_user.admin %>
        <h2>Admin Tools</h2>
        <%= link_to "User list", '/users' %>
      <% end %>
    </div>

    <div class="content">

      <%= flash[:alert] %>
      <%= flash[:notice] %>

      <%= yield %>
    </div>
  </body>
</html>
